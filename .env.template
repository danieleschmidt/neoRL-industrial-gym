# Environment Configuration Template for neoRL-industrial-gym
# Copy this file to .env and customize for your environment
# Never commit .env files to version control!

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment type (development, staging, production)
NEORL_ENV=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application version (auto-detected if not set)
# NEORL_VERSION=1.0.0

# =============================================================================
# MLflow TRACKING SETTINGS
# =============================================================================

# MLflow tracking URI (local file:// or remote http://)
MLFLOW_TRACKING_URI=file://./mlruns

# MLflow experiment name
MLFLOW_EXPERIMENT_NAME=neorl-industrial-default

# MLflow registry URI (optional, defaults to tracking URI)
# MLFLOW_REGISTRY_URI=

# MLflow S3 settings (if using S3 for artifact storage)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com

# =============================================================================
# COMPUTE SETTINGS
# =============================================================================

# JAX settings
JAX_PLATFORM_NAME=cpu  # Options: cpu, gpu, tpu
JAX_ENABLE_X64=false   # Enable 64-bit precision (slower but more accurate)

# GPU settings (if using GPU)
# CUDA_VISIBLE_DEVICES=0,1
# JAX_MEMORY_FRACTION=0.8

# Parallel processing
N_PARALLEL_ENVS=4
N_EVAL_EPISODES=100

# =============================================================================
# DATASET AND STORAGE SETTINGS
# =============================================================================

# Data directory for datasets
DATA_DIR=./data

# Cache directory for processed data
CACHE_DIR=./cache

# Temporary directory for intermediate files
TEMP_DIR=/tmp/neorl

# Maximum dataset size in memory (MB)
MAX_DATASET_SIZE_MB=1000

# =============================================================================
# SAFETY AND MONITORING SETTINGS
# =============================================================================

# Safety monitoring enabled (true/false)
SAFETY_MONITORING_ENABLED=true

# Safety constraint threshold (0.0 to 1.0)
SAFETY_CONSTRAINT_THRESHOLD=0.1

# Emergency shutdown enabled (true/false)
EMERGENCY_SHUTDOWN_ENABLED=true

# Performance monitoring interval (seconds)
MONITORING_INTERVAL=60

# =============================================================================
# NETWORK AND COMMUNICATION SETTINGS
# =============================================================================

# API server settings (if running web interface)
# API_HOST=localhost
# API_PORT=8000
# API_WORKERS=4

# External service timeouts (seconds)
HTTP_TIMEOUT=30
DATABASE_TIMEOUT=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Authentication settings (if applicable)
# AUTH_ENABLED=false
# AUTH_SECRET_KEY=your-secret-key-here
# AUTH_TOKEN_EXPIRY=3600

# SSL/TLS settings
# SSL_ENABLED=false
# SSL_CERT_PATH=
# SSL_KEY_PATH=

# =============================================================================
# INDUSTRIAL ENVIRONMENT SETTINGS
# =============================================================================

# Factory/Industrial system connection settings
# (Only set these in secure, air-gapped environments)

# PLC connection settings
# PLC_HOST=
# PLC_PORT=502
# PLC_TIMEOUT=5

# SCADA system settings
# SCADA_ENDPOINT=
# SCADA_USERNAME=
# SCADA_PASSWORD_FILE=  # Path to password file, never inline

# OPC-UA settings
# OPCUA_ENDPOINT=
# OPCUA_SECURITY_POLICY=
# OPCUA_CERTIFICATE_PATH=

# =============================================================================
# DEVELOPMENT AND TESTING SETTINGS
# =============================================================================

# Testing database (for integration tests)
TEST_DATABASE_URL=sqlite:///./test.db

# Mock external services during testing
MOCK_EXTERNAL_SERVICES=true

# Enable profiling (development only)
ENABLE_PROFILING=false

# Enable detailed logging (development only)
VERBOSE_LOGGING=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Batch sizes for training
BATCH_SIZE=256
EVAL_BATCH_SIZE=1000

# Memory management
MAX_MEMORY_USAGE_GB=8
GARBAGE_COLLECT_INTERVAL=1000

# Parallelization settings
MAX_WORKERS=8
PREFETCH_BUFFER=10

# =============================================================================
# COMPLIANCE AND AUDITING
# =============================================================================

# Audit logging enabled
AUDIT_LOGGING_ENABLED=true

# Audit log file path
AUDIT_LOG_PATH=./logs/audit.log

# Data retention policy (days)
DATA_RETENTION_DAYS=90

# Compliance mode (affects logging and data handling)
COMPLIANCE_MODE=standard  # Options: standard, strict, minimal

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable advanced safety features
ENABLE_ADVANCED_SAFETY=true

# Enable performance optimizations
ENABLE_PERFORMANCE_OPTS=true

# Enable telemetry collection (anonymous usage statistics)
ENABLE_TELEMETRY=false

# =============================================================================
# CUSTOM ENVIRONMENT VARIABLES
# =============================================================================

# Add your custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2