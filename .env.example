# neoRL Industrial Gym Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# Application Configuration
# =============================================================================

# Application environment (development, testing, production)
APP_ENV=development

# Application log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Random seed for reproducibility
RANDOM_SEED=42

# =============================================================================
# MLflow Configuration
# =============================================================================

# MLflow tracking URI (local file system or remote server)
MLFLOW_TRACKING_URI=./mlruns

# MLflow experiment name
MLFLOW_EXPERIMENT_NAME=neorl-industrial-experiments

# MLflow registry URI (optional, for model registry)
# MLFLOW_REGISTRY_URI=sqlite:///mlflow-registry.db

# MLflow artifact root (local or cloud storage)
# MLFLOW_ARTIFACT_ROOT=s3://my-bucket/mlflow-artifacts

# =============================================================================
# JAX Configuration
# =============================================================================

# JAX platform (cpu, gpu, tpu)
JAX_PLATFORM_NAME=cpu

# Enable JAX JIT compilation (true/false)
JAX_ENABLE_X64=true

# JAX memory allocation strategy
JAX_MEMORY_FRACTION=0.8

# Number of JAX devices to use
JAX_NUM_DEVICES=1

# =============================================================================
# Safety Configuration
# =============================================================================

# Enable safety monitoring (true/false)
SAFETY_MONITORING_ENABLED=true

# Safety violation threshold (0.0 to 1.0)
SAFETY_VIOLATION_THRESHOLD=0.01

# Emergency shutdown on safety violation (true/false)
EMERGENCY_SHUTDOWN_ENABLED=true

# Safety log retention period (days)
SAFETY_LOG_RETENTION_DAYS=30

# =============================================================================
# Performance Configuration
# =============================================================================

# Number of parallel environments for training
NUM_PARALLEL_ENVS=4

# Batch size for training
BATCH_SIZE=256

# Number of training epochs
NUM_EPOCHS=100

# Evaluation frequency (every N epochs)
EVAL_FREQ=10

# Maximum episode length
MAX_EPISODE_LENGTH=1000

# =============================================================================
# Data Configuration
# =============================================================================

# Data directory for datasets
DATA_DIR=./data

# Cache directory for processed data
CACHE_DIR=./cache

# Dataset quality level (expert, medium, mixed, random)
DATASET_QUALITY=mixed

# Enable data preprocessing (true/false)
ENABLE_PREPROCESSING=true

# Data loader workers
NUM_WORKERS=4

# =============================================================================
# Industrial Environment Configuration
# =============================================================================

# Default industrial environment
DEFAULT_ENV=ChemicalReactor-v0

# Simulation timestep (seconds)
SIMULATION_TIMESTEP=0.1

# Real-time simulation (true/false)
REALTIME_SIMULATION=false

# Hardware-in-the-loop simulation (true/false)
HIL_SIMULATION=false

# =============================================================================
# Network Configuration
# =============================================================================

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=5000

# Enable CORS (true/false)
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Database Configuration (Optional)
# =============================================================================

# Database URL for experiment metadata
# DATABASE_URL=sqlite:///neorl_industrial.db

# Database connection pool size
# DB_POOL_SIZE=5

# Database timeout (seconds)
# DB_TIMEOUT=30

# =============================================================================
# Cloud Storage Configuration (Optional)
# =============================================================================

# AWS S3 bucket for data storage
# AWS_S3_BUCKET=my-neorl-bucket

# AWS region
# AWS_REGION=us-west-2

# AWS access credentials (preferably use IAM roles)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Enable Prometheus metrics (true/false)
ENABLE_PROMETHEUS=false

# Prometheus metrics port
PROMETHEUS_PORT=9090

# Enable health checks (true/false)
ENABLE_HEALTH_CHECKS=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Security Configuration
# =============================================================================

# API authentication token (generate a secure random string)
# API_TOKEN=your_secure_token_here

# Enable audit logging (true/false)
ENABLE_AUDIT_LOG=true

# Audit log file path
AUDIT_LOG_PATH=./logs/audit.log

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Enable code profiling (true/false)
ENABLE_PROFILING=false

# Profiler output directory
PROFILER_OUTPUT_DIR=./profiler_output

# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL=false

# =============================================================================
# Testing Configuration
# =============================================================================

# Test data directory
TEST_DATA_DIR=./tests/fixtures

# Enable test coverage reporting (true/false)
ENABLE_COVERAGE=true

# Minimum test coverage threshold (percentage)
MIN_COVERAGE_THRESHOLD=80

# =============================================================================
# CI/CD Configuration
# =============================================================================

# CI environment indicator (true/false)
CI=false

# Build number or commit hash
# BUILD_NUMBER=1.0.0

# Git commit hash
# GIT_COMMIT=abc123def456

# Deployment environment
# DEPLOY_ENV=staging